# ============================================
# PrimeX IPTV System - Production Configuration
# ============================================
# Developer: PAX
# Support: info@paxdes.com
#
# DEPLOYMENT INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Update all values below
# 3. Restart the server
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=primex
DB_USER=primex_user
DB_PASSWORD=your_secure_database_password_here

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_64_character_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=generate_another_64_character_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# ADMIN ACCOUNT
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisImmediately123!
ADMIN_EMAIL=info@paxdes.com

# ============================================
# SECURITY SETTINGS
# ============================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ============================================
# SYSTEM SETTINGS
# ============================================
DEFAULT_LANGUAGE=en
ENABLE_DEVICE_BINDING=true
MAX_DEVICES_PER_USER=1
SUPPORT_EMAIL=info@paxdes.com

# ============================================
# API CONFIGURATION
# ============================================
API_PREFIX=/api/v1
CORS_ORIGIN=*

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
