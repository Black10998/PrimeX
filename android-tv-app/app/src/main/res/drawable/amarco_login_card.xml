<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/Glow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/amarco_focus_glow" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Card Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/amarco_dark_gray" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Subtle Border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/amarco_glass_medium" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
