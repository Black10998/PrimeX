<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State - Premium Gold Border with Glow -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_focus_glow" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Card background -->
            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_card_focused" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Gold border -->
            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="@color/amarco_gold" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Inner highlight -->
            <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/amarco_glass_light" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State - Subtle Glass Effect -->
    <item>
        <layer-list>
            <!-- Card background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_card_normal" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Subtle border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/amarco_glass_dark" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
