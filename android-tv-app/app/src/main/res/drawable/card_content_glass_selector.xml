<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - prominent glass effect with accent border -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow effect -->
            <item>
                <shape>
                    <solid android:color="#30FFFFFF" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            <!-- Main border with accent color -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape>
                    <stroke
                        android:width="3dp"
                        android:color="@color/accent_color" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Inner glass highlight -->
            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="#50FFFFFF" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state - subtle glass border -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
