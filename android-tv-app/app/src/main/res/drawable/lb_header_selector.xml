<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused/Selected state -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_medium_gray" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:left="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_gold" />
                    <size android:width="2dp" />
                    <corners 
                        android:topLeftRadius="8dp"
                        android:bottomLeftRadius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/amarco_dark_gray" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/amarco_black" />
        </shape>
    </item>
</selector>
