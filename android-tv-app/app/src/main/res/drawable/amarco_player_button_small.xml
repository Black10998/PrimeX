<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_focus_glow" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/amarco_medium_gray" />
                    <stroke android:width="2dp" android:color="@color/amarco_gold" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/amarco_dark_gray" />
            <stroke android:width="1dp" android:color="@color/amarco_glass_dark" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>
