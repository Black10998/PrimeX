<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/lb_header_selector"
    android:stateListAnimator="@drawable/lb_header_focus_animator"
    android:focusable="true"
    android:focusableInTouchMode="true">
    
    <!-- Icon placeholder (will be hidden if no icon) -->
    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:tint="@color/lb_header_text_color"
        android:visibility="gone"
        android:contentDescription="Category icon" />
    
    <!-- Text -->
    <TextView
        android:id="@android:id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/lb_header_text_color"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:ellipsize="end"
        android:maxLines="1" />
    
</LinearLayout>
