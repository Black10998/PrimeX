<?xml version="1.0" encoding="utf-8"?>
<!-- Apple TV Style Settings Screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/appletv_background_primary">

    <!-- Left: Settings Categories -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/appletv_screen_margin_horizontal"
        android:background="@color/appletv_background_secondary">

        <TextView
            style="@style/AppleTV.Text.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginBottom="@dimen/appletv_spacing_xl" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/settings_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false" />

    </LinearLayout>

    <!-- Right: Settings Details -->
    <FrameLayout
        android:id="@+id/settings_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/appletv_screen_margin_horizontal" />

</LinearLayout>
