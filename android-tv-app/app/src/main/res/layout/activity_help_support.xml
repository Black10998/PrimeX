<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarco_black"
    android:padding="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textColor="@color/amarco_gold"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We're here to help you get the most out of PrimeX"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:alpha="0.7"
            android:layout_marginBottom="32dp" />

        <!-- FAQ Card -->
        <LinearLayout
            android:id="@+id/faq_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š Frequently Asked Questions"
                android:textColor="@color/amarco_gold"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find answers to common questions"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Contact Support Card -->
        <LinearLayout
            android:id="@+id/contact_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Contact Support"
                android:textColor="@color/amarco_gold"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get in touch with our support team"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@paxdes.com"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.5" />

        </LinearLayout>

        <!-- User Guides Card -->
        <LinearLayout
            android:id="@+id/guides_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“– User Guides"
                android:textColor="@color/amarco_gold"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn how to use all features"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Feedback Card -->
        <LinearLayout
            android:id="@+id/feedback_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="32dp"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ Send Feedback"
                android:textColor="@color/amarco_gold"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share your thoughts and suggestions"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- App Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Information"
                android:textColor="@color/amarco_gold"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Version:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Build:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/build_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Developer:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAX"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
