<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="330dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/amarco_card_premium"
    android:stateListAnimator="@drawable/amarco_card_focus_animator">

    <!-- Poster Image -->
    <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Content poster" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/amarco_card_gradient" />

    <!-- Quality Badge -->
    <TextView
        android:id="@+id/card_quality_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:background="@drawable/amarco_badge_quality"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="4K"
        android:textColor="@color/amarco_black"
        android:textSize="11sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone" />

    <!-- Rating Badge -->
    <LinearLayout
        android:id="@+id/card_rating_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="12dp"
        android:background="@drawable/amarco_badge_rating"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star"
            android:tint="@color/amarco_gold"
            android:contentDescription="Rating" />
        
        <TextView
            android:id="@+id/card_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="8.5"
            android:textColor="@color/amarco_text_primary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Content Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Amarco.Text.Title.Medium"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:shadowColor="@color/amarco_black"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Metadata -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Year -->
            <TextView
                android:id="@+id/card_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Amarco.Text.Body.Small"
                android:text="2024"
                android:visibility="gone" />

            <!-- Separator -->
            <View
                android:id="@+id/card_separator1"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/amarco_dot"
                android:visibility="gone" />

            <!-- Genre -->
            <TextView
                android:id="@+id/card_genre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Amarco.Text.Body.Small"
                android:text="Action"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
