<?xml version="1.0" encoding="utf-8"?>
<!-- Apple TV Style Settings Toggle Item -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/appletv_spacing_md"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/appletv_settings_item_background">

    <!-- Text Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/toggle_title"
            style="@style/AppleTV.Text.Callout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appletv_text_primary" />

        <!-- Description -->
        <TextView
            android:id="@+id/toggle_description"
            style="@style/AppleTV.Text.Footnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appletv_spacing_xxxs"
            android:textColor="@color/appletv_text_tertiary"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/toggle_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/appletv_spacing_md" />

</LinearLayout>
