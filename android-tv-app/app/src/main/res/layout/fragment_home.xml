<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amarco_black">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:background="@color/amarco_black">

        <!-- Logo/Brand -->
        <ImageView
            android:id="@+id/brand_logo"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:src="@drawable/amarco_logo"
            android:scaleType="fitStart"
            android:contentDescription="Amarco Logo"
            android:layout_marginEnd="48dp"
            android:alpha="0" />

        <!-- Navigation Items -->
        <TextView
            android:id="@+id/nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/amarco_text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_live_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live TV"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:tint="#80FFFFFF"
            android:padding="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true"
            android:contentDescription="Search" />

        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

    </LinearLayout>

    <!-- Content Area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/content_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="24dp"
        android:paddingBottom="24dp" />

</LinearLayout>
