<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amarco_black">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:background="@color/amarco_black">

        <!-- Logo/Brand -->
        <ImageView
            android:id="@+id/brand_logo"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:src="@drawable/amarco_logo"
            android:scaleType="fitStart"
            android:contentDescription="Amarco Logo"
            android:layout_marginEnd="24dp"
            android:alpha="0" />

        <!-- Navigation Items -->
        <TextView
            android:id="@+id/nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/amarco_text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_live_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live TV"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/nav_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:tint="#80FFFFFF"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true"
            android:contentDescription="Search" />

        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/nav_item_background"
            android:focusable="true"
            android:clickable="true" />

    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Animated Backgrounds (subtle gradients with variation) -->
        <View
            android:id="@+id/animated_background_1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/home_gradient_background_1"
            android:alpha="0.3" />

        <View
            android:id="@+id/animated_background_2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/home_gradient_background_2"
            android:alpha="0" />

        <!-- Welcome Section -->
        <LinearLayout
            android:id="@+id/welcome_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="56dp"
            android:paddingTop="40dp"
            android:paddingEnd="56dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:fontFamily="sans-serif-thin"
                android:letterSpacing="0.08"
                android:alpha="0"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8" />

            <TextView
                android:id="@+id/welcome_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover your favorite content"
                android:textColor="#B0FFFFFF"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.03"
                android:layout_marginTop="12dp"
                android:alpha="0" />

            <TextView
                android:id="@+id/social_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow us on social media"
                android:textColor="#60FFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:alpha="0" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="140dp"
            android:paddingBottom="24dp" />

        <!-- Developer Info (subtle, bottom left) -->
        <TextView
            android:id="@+id/developer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="24dp"
            android:text="Developer: PAX | info@paxdes.com"
            android:textColor="#40FFFFFF"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:alpha="0.6" />

    </FrameLayout>

</LinearLayout>
