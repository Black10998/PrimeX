<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarco_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Configuration"
            android:textSize="32sp"
            android:textColor="@color/amarco_gold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure your IPTV server connection"
            android:textSize="16sp"
            android:textColor="@color/amarco_text_secondary"
            android:layout_marginBottom="32dp" />

        <!-- Server Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Name"
            android:textSize="18sp"
            android:textColor="@color/amarco_text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/server_name_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="PAX IPTV Server"
            android:textSize="16sp"
            android:textColor="@color/amarco_text_primary"
            android:textColorHint="@color/amarco_text_secondary"
            android:background="@color/amarco_card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:inputType="text"
            android:maxLines="1" />

        <!-- Server URL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server URL"
            android:textSize="18sp"
            android:textColor="@color/amarco_text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/server_url_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="prime-x.live"
            android:textSize="16sp"
            android:textColor="@color/amarco_text_primary"
            android:textColorHint="@color/amarco_text_secondary"
            android:background="@color/amarco_card_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:inputType="textUri"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter domain without http:// or https://"
            android:textSize="14sp"
            android:textColor="@color/amarco_text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- HTTPS Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Use HTTPS"
                android:textSize="18sp"
                android:textColor="@color/amarco_text_primary" />

            <Switch
                android:id="@+id/https_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Portal Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portal Type"
            android:textSize="18sp"
            android:textColor="@color/amarco_text_primary"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/portal_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/amarco_card_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/amarco_text_secondary"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:minHeight="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/test_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Test"
                android:textSize="16sp"
                android:textColor="@color/amarco_text_primary"
                android:background="@color/amarco_card_background"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Reset"
                android:textSize="16sp"
                android:textColor="@color/amarco_text_primary"
                android:background="@color/amarco_card_background"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Configuration"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:background="@color/amarco_gold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
