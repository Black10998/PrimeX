<?xml version="1.0" encoding="utf-8"?>
<!-- Apple TV Style Video Player -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appletv_background_primary">

    <!-- Video Surface -->
    <SurfaceView
        android:id="@+id/player_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Player Controls Overlay -->
    <LinearLayout
        android:id="@+id/player_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/appletv_player_scrim"
        android:visibility="gone">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/appletv_spacing_xl">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/player_back"
                android:layout_width="@dimen/appletv_icon_md"
                android:layout_height="@dimen/appletv_icon_md"
                android:src="@drawable/ic_back"
                android:tint="@color/appletv_text_primary"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="@string/back" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Title -->
            <TextView
                android:id="@+id/player_title"
                style="@style/AppleTV.Text.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appletv_spacing_lg"
                android:layout_marginEnd="@dimen/appletv_spacing_lg"
                android:maxLines="1"
                android:ellipsize="end" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Settings -->
            <ImageView
                android:id="@+id/player_settings"
                android:layout_width="@dimen/appletv_icon_md"
                android:layout_height="@dimen/appletv_icon_md"
                android:src="@drawable/ic_settings"
                android:tint="@color/appletv_text_primary"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="@string/settings" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/appletv_spacing_xl">

            <!-- Progress Bar -->
            <SeekBar
                android:id="@+id/player_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/appletv_spacing_md"
                android:progressTint="@color/appletv_text_primary"
                android:thumbTint="@color/appletv_text_primary" />

            <!-- Time Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/appletv_spacing_lg">

                <TextView
                    android:id="@+id/player_current_time"
                    style="@style/AppleTV.Text.Footnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/player_duration"
                    style="@style/AppleTV.Text.Footnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00" />

            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- Rewind -->
                <ImageView
                    android:id="@+id/player_rewind"
                    android:layout_width="@dimen/appletv_icon_lg"
                    android:layout_height="@dimen/appletv_icon_lg"
                    android:src="@drawable/ic_rewind"
                    android:tint="@color/appletv_text_primary"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="@dimen/appletv_spacing_sm"
                    android:layout_marginEnd="@dimen/appletv_spacing_xl"
                    android:contentDescription="@string/rewind" />

                <!-- Play/Pause -->
                <ImageView
                    android:id="@+id/player_play_pause"
                    android:layout_width="@dimen/appletv_icon_xl"
                    android:layout_height="@dimen/appletv_icon_xl"
                    android:src="@drawable/ic_play"
                    android:tint="@color/appletv_text_primary"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="@dimen/appletv_spacing_sm"
                    android:layout_marginEnd="@dimen/appletv_spacing_xl"
                    android:contentDescription="@string/play" />

                <!-- Forward -->
                <ImageView
                    android:id="@+id/player_forward"
                    android:layout_width="@dimen/appletv_icon_lg"
                    android:layout_height="@dimen/appletv_icon_lg"
                    android:src="@drawable/ic_forward"
                    android:tint="@color/appletv_text_primary"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="@dimen/appletv_spacing_sm"
                    android:contentDescription="@string/forward" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/player_loading"
        android:layout_width="@dimen/appletv_icon_xl"
        android:layout_height="@dimen/appletv_icon_xl"
        android:layout_gravity="center"
        android:indeterminateTint="@color/appletv_text_primary"
        android:visibility="gone" />

</FrameLayout>
