<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="170dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/amarco_card_premium"
    android:stateListAnimator="@drawable/amarco_card_focus_animator">

    <!-- Channel Logo/Image -->
    <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:padding="24dp"
        android:contentDescription="Channel logo" />

    <!-- Gradient Overlay for Text -->
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/amarco_card_gradient" />

    <!-- Live Indicator -->
    <LinearLayout
        android:id="@+id/card_live_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="12dp"
        android:background="@drawable/amarco_badge_live"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible">
        
        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/amarco_live_dot"
            android:layout_marginEnd="6dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE"
            android:textColor="@color/amarco_text_primary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Channel Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Channel Name -->
        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Amarco.Text.Title.Medium"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="@color/amarco_black"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Current Program -->
        <TextView
            android:id="@+id/card_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="@style/Amarco.Text.Body.Small"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="@color/amarco_black"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
