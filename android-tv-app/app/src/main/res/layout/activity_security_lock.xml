<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="48dp"
    android:background="#1A1A1A">

    <!-- Security Icon -->
    <ImageView
        android:id="@+id/security_lock_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_dialog_alert"
        android:tint="#FF5252"
        android:layout_marginBottom="32dp"
        android:contentDescription="Security Warning" />

    <!-- Title -->
    <TextView
        android:id="@+id/security_lock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Verification Failed"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/security_lock_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app has been modified and cannot be verified."
        android:textSize="20sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:maxWidth="800dp"
        android:layout_marginBottom="32dp"
        android:lineSpacingMultiplier="1.3" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- Primary Action Button -->
        <Button
            android:id="@+id/security_lock_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Official App"
            android:textSize="18sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Exit Button -->
        <Button
            android:id="@+id/security_lock_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="18sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@android:color/darker_gray"
            android:textColor="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

    <!-- Technical Details (Hidden by default) -->
    <TextView
        android:id="@+id/security_lock_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technical details..."
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:maxWidth="800dp"
        android:fontFamily="monospace"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <!-- Help Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For support, please contact us through the official website"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>
