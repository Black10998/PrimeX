<?xml version="1.0" encoding="utf-8"?>
<!-- Apple TV Style Content Row - Horizontal Scrolling Section -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/appletv_screen_margin_horizontal"
    android:paddingEnd="@dimen/appletv_screen_margin_horizontal"
    android:layout_marginBottom="@dimen/appletv_row_spacing">

    <!-- Row Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/appletv_row_title_margin_bottom">

        <!-- Row Title -->
        <TextView
            android:id="@+id/row_title"
            style="@style/AppleTV.Text.SectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- See All Button (Optional) -->
        <TextView
            android:id="@+id/row_see_all"
            style="@style/AppleTV.Text.Callout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all"
            android:textColor="@color/appletv_accent_primary"
            android:focusable="true"
            android:clickable="true"
            android:padding="@dimen/appletv_spacing_xs"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Horizontal RecyclerView for Cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/row_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal" />

</LinearLayout>
