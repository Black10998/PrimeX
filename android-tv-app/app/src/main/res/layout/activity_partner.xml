<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarco_black"
    android:padding="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner Program"
            android:textColor="@color/amarco_gold"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earn rewards by referring friends and family"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:alpha="0.7"
            android:layout_marginBottom="32dp" />

        <!-- Referral Code Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Referral Code"
                android:textColor="@color/amarco_gold"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/referral_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIME-123456"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share this code with friends to earn rewards"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.6" />

        </LinearLayout>

        <!-- Stats Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Stats"
                android:textColor="@color/amarco_gold"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Total Referrals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Referrals"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/total_referrals_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Total Earnings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Earnings"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/earnings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textColor="@color/amarco_gold"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- How it Works Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How It Works"
                android:textColor="@color/amarco_gold"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Share your referral code with friends\n\n2. They sign up using your code\n\n3. You earn rewards for each successful referral\n\n4. Track your earnings in real-time"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
