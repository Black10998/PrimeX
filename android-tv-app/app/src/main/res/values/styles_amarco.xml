<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Amarco Typography System -->
    
    <!-- Display Styles -->
    <style name="Amarco.Text.Display.Large">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="Amarco.Text.Display.Medium">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- Headline Styles -->
    <style name="Amarco.Text.Headline.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="Amarco.Text.Headline.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Amarco.Text.Headline.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Title Styles -->
    <style name="Amarco.Text.Title.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="Amarco.Text.Title.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="Amarco.Text.Title.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Body Styles -->
    <style name="Amarco.Text.Body.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/amarco_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="Amarco.Text.Body.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/amarco_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="Amarco.Text.Body.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/amarco_text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Label Styles -->
    <style name="Amarco.Text.Label.Large">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/amarco_text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <style name="Amarco.Text.Label.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/amarco_text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <style name="Amarco.Text.Label.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/amarco_text_tertiary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <!-- Accent Text -->
    <style name="Amarco.Text.Accent">
        <item name="android:textColor">@color/amarco_gold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Category Header Style -->
    <style name="Amarco.Text.CategoryHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>
