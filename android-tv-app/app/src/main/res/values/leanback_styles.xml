<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Amarco Leanback Theme Customization -->
    
    <!-- Browse Fragment Styling - Simplified without invalid parents -->
    <style name="Amarco.BrowseTitle">
        <item name="android:textColor">@color/amarco_gold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- Headers (Sidebar) Styling -->
    <style name="Amarco.Header">
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Amarco.Header.Section">
        <item name="android:textColor">@color/amarco_text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Row Header Styling -->
    <style name="Amarco.Row" />
    
    <style name="Amarco.Row.Header">
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Leanback Header Item (Sidebar) Styling -->
    <style name="Widget.Leanback.Header" parent="">
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/amarco_black</item>
    </style>
    
    <style name="Widget.Leanback.Header.Section" parent="Widget.Leanback.Header">
        <item name="android:textColor">@color/amarco_text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <!-- Search Orb Styling - Removed invalid attributes -->
    
    <!-- Playback Controls - Removed invalid parent -->
    
    <!-- Details Description -->
    <style name="Amarco.DetailsDescriptionTitle">
        <item name="android:textColor">@color/amarco_text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Amarco.DetailsDescriptionSubtitle">
        <item name="android:textColor">@color/amarco_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Amarco.DetailsDescriptionBody">
        <item name="android:textColor">@color/amarco_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
</resources>
