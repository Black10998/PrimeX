<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Amarco Base Theme -->
    <style name="Theme.Amarco" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/amarco_black</item>
        <item name="android:colorPrimary">@color/amarco_gold</item>
        <item name="android:colorPrimaryDark">@color/amarco_gold_dark</item>
        <item name="android:colorAccent">@color/amarco_gold</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/amarco_black</item>
        <item name="android:navigationBarColor">@color/amarco_black</item>
        
        <!-- Leanback Customizations - Only valid attributes -->
        <item name="defaultBrandColor">@color/amarco_gold</item>
        <item name="defaultSearchColor">@color/amarco_gold</item>
    </style>
    
    <!-- Amarco Splash Theme -->
    <style name="Theme.Amarco.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/amarco_splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/amarco_black</item>
        <item name="android:navigationBarColor">@color/amarco_black</item>
    </style>
    
    <!-- Amarco Login Theme -->
    <style name="Theme.Amarco.Login" parent="Theme.Amarco">
        <item name="android:windowBackground">@drawable/amarco_splash_background</item>
    </style>
    
    <!-- Legacy PrimeX Theme (for compatibility) -->
    <style name="Theme.PrimeX" parent="Theme.Amarco" />

    <!-- Leanback Theme - Amarco Dark Premium -->
    <style name="Theme.Leanback" parent="Theme.Leanback.Browse">
        <item name="android:windowBackground">@color/amarco_black</item>
        <item name="android:colorPrimary">@color/amarco_gold</item>
        <item name="android:colorAccent">@color/amarco_gold</item>
        <item name="browseTitleTextStyle">@style/BrowseTitleTextStyle</item>
        <item name="browseTitleViewStyle">@style/BrowseTitleViewStyle</item>
        <item name="defaultBrandColor">@color/amarco_gold</item>
        <item name="defaultSearchColor">@color/amarco_gold</item>
        
        <!-- Sidebar/Headers styling -->
        <item name="browsePaddingStart">0dp</item>
        <item name="browsePaddingEnd">0dp</item>
        <item name="browsePaddingTop">0dp</item>
        <item name="browsePaddingBottom">0dp</item>
        
        <!-- Header item styling (sidebar items) -->
        <item name="browseRowsMarginTop">0dp</item>
        <item name="browseRowsMarginStart">0dp</item>
    </style>

    <style name="BrowseTitleTextStyle" parent="Widget.Leanback.Title.Text">
        <item name="android:textColor">@color/amarco_gold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="BrowseTitleViewStyle" parent="Widget.Leanback.Title">
        <item name="android:background">@color/amarco_black</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Android TV Theme for Login/Activation -->
    <style name="Theme.PrimeX.Activation" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- AppCompat Theme for Player Activity -->
    <style name="Theme.PrimeX.Player" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
