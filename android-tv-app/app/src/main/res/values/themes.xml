<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Amarco Base Theme -->
    <style name="Theme.Amarco" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/amarco_black</item>
        <item name="android:colorPrimary">@color/amarco_gold</item>
        <item name="android:colorPrimaryDark">@color/amarco_gold_dark</item>
        <item name="android:colorAccent">@color/amarco_gold</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/amarco_black</item>
        <item name="android:navigationBarColor">@color/amarco_black</item>
        
        <!-- Leanback Customizations -->
        <item name="browseTitleTextStyle">@style/Widget.Leanback.BrowseTitle</item>
        <item name="headerStyle">@style/Widget.Leanback.Header</item>
        <item name="rowHeaderStyle">@style/Widget.Leanback.Row.Header</item>
        <item name="searchOrbViewStyle">@style/Widget.Leanback.SearchOrbViewStyle</item>
        <item name="playbackControlsActionIconsStyle">@style/Widget.Leanback.PlaybackControlsActionIcons</item>
        <item name="detailsDescriptionTitleStyle">@style/Widget.Leanback.DetailsDescriptionTitleStyle</item>
        <item name="detailsDescriptionSubtitleStyle">@style/Widget.Leanback.DetailsDescriptionSubtitleStyle</item>
        <item name="detailsDescriptionBodyStyle">@style/Widget.Leanback.DetailsDescriptionBodyStyle</item>
        
        <!-- Default background for browse -->
        <item name="defaultBrandColor">@color/amarco_gold</item>
        <item name="defaultSearchColor">@color/amarco_gold</item>
    </style>
    
    <!-- Amarco Splash Theme -->
    <style name="Theme.Amarco.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/amarco_splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/amarco_black</item>
        <item name="android:navigationBarColor">@color/amarco_black</item>
    </style>
    
    <!-- Amarco Login Theme -->
    <style name="Theme.Amarco.Login" parent="Theme.Amarco">
        <item name="android:windowBackground">@drawable/amarco_splash_background</item>
    </style>
    
    <!-- Legacy PrimeX Theme (for compatibility) -->
    <style name="Theme.PrimeX" parent="Theme.Amarco" />

    <!-- Leanback Theme -->
    <style name="Theme.Leanback" parent="Theme.Leanback.Browse">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="browseTitleTextStyle">@style/BrowseTitleTextStyle</item>
        <item name="browseTitleViewStyle">@style/BrowseTitleViewStyle</item>
        <item name="defaultBrandColor">@color/accent_color</item>
        <item name="defaultSearchColor">@color/accent_color</item>
    </style>

    <style name="BrowseTitleTextStyle" parent="Widget.Leanback.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrowseTitleViewStyle" parent="Widget.Leanback.Title">
        <item name="android:background">@color/background_dark</item>
    </style>

    <!-- Android TV Theme for Login/Activation -->
    <style name="Theme.PrimeX.Activation" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- AppCompat Theme for Player Activity -->
    <style name="Theme.PrimeX.Player" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
