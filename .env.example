# ============================================
# PrimeX IPTV System - Environment Configuration
# ============================================
# Developer: PAX
# Support: info@paxdes.com
#
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace ALL placeholder values
# 3. Never commit .env to git
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# Database name MUST be: primex
# Create dedicated user (NOT root)
# 
# NO DEFAULTS - You MUST set these values
# 
# Example setup (adjust host as needed):
#   CREATE DATABASE primex CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
#   CREATE USER 'primex_user'@'YOUR_DB_HOST' IDENTIFIED BY 'your_password';
#   GRANT ALL PRIVILEGES ON primex.* TO 'primex_user'@'YOUR_DB_HOST';
#   FLUSH PRIVILEGES;

DB_HOST=YOUR_DATABASE_HOST
DB_PORT=3306
DB_NAME=primex
DB_USER=primex_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# Generate secure secrets:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=GENERATE_64_CHAR_SECRET_HERE
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=GENERATE_ANOTHER_64_CHAR_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# ADMIN ACCOUNT (REQUIRED)
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
ADMIN_EMAIL=info@paxdes.com

# ============================================
# SECURITY SETTINGS
# ============================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ============================================
# SYSTEM SETTINGS
# ============================================
DEFAULT_LANGUAGE=en
ENABLE_DEVICE_BINDING=true
MAX_DEVICES_PER_USER=1
SUPPORT_EMAIL=info@paxdes.com

# ============================================
# API CONFIGURATION
# ============================================
API_PREFIX=/api/v1
CORS_ORIGIN=*

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
